{
  "scripts": {
    "frontend:install": "cd store-front && npm install -f",
    "frontend:start": "cd store-front && npm start",
    "frontend:build": "cd store-front && npm run build",
    "frontend:test": "cd store-front && npm run test",
    "frontend:e2e": "cd store-front && npm run e2e",
    "frontend:lint": "cd store-front && npm run lint",
    "frontend:deploy": "cd store-front && npm run deploy",
    "api:install": "cd store-backend && npm install -f",
    "api:start": "cd store-backend && npm start",
    "api:deploy": "cd store-backend && npm run deploy",
    "deploy": "npm run frontend:deploy && npm run api:deploy"
  }

}
